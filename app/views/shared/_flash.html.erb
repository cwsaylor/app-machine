<%- if has_flashes? %>
<div class="container">
  <div class="row">
    <div class="col">
      <%- flash.reject { |k, v| v.blank? }.each do |key, message| %>
      <div class="alert alert-dismissible fade show <%= flash_class(key) %>">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      </div>
      <%- end %>
    </div>
  </div>
</div>
<%- end %>
